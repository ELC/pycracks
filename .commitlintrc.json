{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "scope-empty": [
            2,
            "never"
        ],
        "scope-min-length": [
            2,
            "always",
            2
        ],
        "scope-case": [
            2,
            "always",
            "lower-case"
        ],
        "subject-empty": [
            2,
            "never"
        ],
        "subject-case": [
            2,
            "always",
            "lower-case"
        ],
        "subject-min-length": [
            2,
            "always",
            10
        ],
        "type-enum": [
            2,
            "always",
            [
                "fix",
                "feat",
                "chore"
            ]
        ]
    }
}
